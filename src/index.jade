		//- Links

		//- Render svg
		svg(xmlns='http://www.w3.org/2000/svg', style='display: none;')
			include svg/icon-about.svg
			include svg/icon-art.svg
			include svg/icon-behance.svg
			include svg/icon-codepen.svg
			include svg/icon-digital.svg
			include svg/icon-dribbble.svg
			include svg/icon-ello.svg
			include svg/icon-email.svg
			include svg/icon-github.svg
			include svg/icon-instagram.svg
			include svg/icon-twitter.svg

		div#oeltjen
			include svg/oeltjen.svg		

		ul#items
			each link, name in items
				li(class=name)
					a(href=link[1], target="_blank", id="link-"+name)
						span
							i= link[0]
							b 
								svg.icon
									use(xlink:href='#icon-'+name)

		div#about
			div.close
				a#close-about(href="#") &times;
			div.inner
				p 
					b h1
					span Niels Oeltjen
				p 
					b h2
					span A.K.A Nails
				p 
					b p
					span Artist and Digital Maker
				p 
					b p
					span Links to various creative projects and places of interest
				p 
					b p
					span I used to make street art dintchaknow?
							
						
