		//- link(rel='apple-touch-icon', sizes='152x152', href='assets/favicon-152.png')

		//- Resources
		script
			include inline/head.js
			include inline/analytics.js
			include inline/script.js
		style
			include inline/screen.css
			

	body(dir='ltr')
